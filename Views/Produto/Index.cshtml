@model List<LojaGilmarF.Models.Produto>

@{
    ViewData["Title"] = "Loja de Roupas Masculinas";
}

<h1>@ViewData["Title"]</h1>

<div style="display:flex; gap:20px; flex-wrap:wrap;">
    @foreach (var produto in Model)
    {
        <div style="border:1px solid #ccc; padding:10px; width:200px; text-align:center;">
            <img src="@produto.ImagemUrl" alt="@produto.Nome" style="width:100%; height:auto;" />
            <h3>@produto.Nome</h3>
            <p>@produto.Descricao</p>
            <p><b>Pre√ßo:</b> R$ @produto.Preco</p>
        </div>
    }
</div>

